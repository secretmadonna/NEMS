@model SecretMadonna.NEMS.UI.TeacherWebUI.Models.AccountLoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - TeacherWebUI</title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(m => m.ReturnUrl)
            <div class="form-group">
                @Html.LabelFor(m => m.Loginname, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Loginname, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Value = Model.Password })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
</body>
</html>
