<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="@Url.Content("~/favicon.ico")" rel="icon" type="image/x-icon" />@*<link rel="icon" type="image/x-icon" href="data:;base64,=" />*@

    <link href="@Url.Content("~/Content/plugins/normalize/normalize.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/plugins/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/plugins/twitter-bootstrap/css/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css" />*@
    @Styles.Render("~/cssbundles/font-awesome")
    <link href="~/Content/css/site.css" rel="stylesheet" type="text/css" />


    <script type="text/javascript" src="~/Content/plugins/modernizr/modernizr.js"></script>

    <!--[if lte IE 8]>
        @Scripts.Render("~/jsbundles/h5css3")
    <![endif]-->

    @RenderSection("headend", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript" src="~/Content/plugins/jquery/jquery.js"></script>
    @*<script type="text/javascript" src="~/Content/plugins/twitter-bootstrap/js/bootstrap.js"></script>*@
    @Scripts.Render("~/jsbundles/bootstrapjs")

    @RenderSection("bodyend", false)
</body>
</html>